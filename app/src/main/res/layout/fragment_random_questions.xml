<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/background_color"
    tools:context=".fragment.SetPlayersFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="24dp">

        <ImageView
            android:id="@+id/point"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="8dp"
            android:importantForAccessibility="no"
            android:padding="5dp"
            android:src="@drawable/icon_left_arrow"
            app:tint="@color/dark_purple" />

        <TextView
            android:id="@+id/get_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="68dp"
            android:layout_weight="1"
            android:fontFamily="@font/bold"
            android:gravity="center"
            android:text="Имя"
            android:textColor="@color/dark_purple"
            android:textSize="30sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:layout_marginVertical="8dp"
            android:layout_gravity="center"
            android:background="@color/dark_purple" />

        <TextView
            android:id="@+id/questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semi_bold"
            android:gravity="center"
            android:text="dare"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:layout_marginVertical="8dp"
            android:layout_gravity="center"
            android:background="@color/dark_purple" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButtonReverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/light_purple_color"
            android:clickable="true"
            android:focusable="true"
            android:importantForAccessibility="no"
            app:fabSize="normal"
            android:layout_marginEnd="30dp"
            app:rippleColor="@color/ripple_color"
            app:srcCompat="@drawable/icon_reverse"
            app:tint="@color/white" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButtonPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/light_purple_color"
            android:clickable="true"
            android:focusable="true"
            android:importantForAccessibility="no"
            app:fabSize="normal"
            app:rippleColor="@color/ripple_color"
            app:srcCompat="@drawable/image_play"
            app:tint="@color/white" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButtonPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:backgroundTint="@color/light_purple_color"
            android:clickable="true"
            android:focusable="true"
            android:importantForAccessibility="no"
            app:fabSize="normal"
            app:rippleColor="@color/ripple_color"
            app:srcCompat="@drawable/icon_plus"
            app:tint="@color/white" />

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
