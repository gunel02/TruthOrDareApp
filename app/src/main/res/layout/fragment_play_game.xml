<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:importantForAccessibility="no"
            android:padding="4dp"
            android:src="@drawable/icon_left_arrow"
            app:tint="@color/image_yellow_color" />

        <TextView
            android:id="@+id/set_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="40dp"
            android:gravity="center"
            android:text="Name"
            android:fontFamily="@font/bold"
            android:textColor="@color/image_yellow_color"
            android:textSize="35sp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/app_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="30dp"
        android:paddingHorizontal="15dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="23dp"
            android:orientation="vertical"
            android:padding="60dp"
            app:cardBackgroundColor="@color/lighter_background"
            app:cardCornerRadius="12dp"
            app:strokeColor="@android:color/transparent"
            app:strokeWidth="0dp"
            tools:context=".fragment.AddPeopleFragment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/game_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="@font/regular"
                    android:gravity="center"
                    android:padding="20dp"
                    android:text="Question?"
                    android:textColor="@color/dirty_white"
                    android:textSize="25sp" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="15dp">

        <com.example.app.widgets.RippleEffect
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/change_questions_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/image_yellow_color"
                app:cardCornerRadius="30dp"
                app:strokeColor="@android:color/transparent"
                app:strokeWidth="0dp">

                <ImageView
                    android:layout_width="43dp"
                    android:layout_height="47dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/icon_reverse"
                    app:tint="@color/app_background" />
            </com.google.android.material.card.MaterialCardView>

        </com.example.app.widgets.RippleEffect>

        <com.example.app.widgets.RippleEffect
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/finish_btn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/image_yellow_color"
                app:cardCornerRadius="30dp"
                app:strokeColor="@android:color/transparent"
                app:strokeWidth="0dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/image_play"
                    app:tint="@color/app_background" />

            </com.google.android.material.card.MaterialCardView>

        </com.example.app.widgets.RippleEffect>

        <com.example.app.widgets.RippleEffect
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/add_custom_pack_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/image_yellow_color"
                app:cardCornerRadius="30dp"
                app:strokeColor="@android:color/transparent"
                app:strokeWidth="0dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/icon_plus"
                    app:tint="@color/app_background" />

            </com.google.android.material.card.MaterialCardView>

        </com.example.app.widgets.RippleEffect>

    </LinearLayout>

</LinearLayout>
